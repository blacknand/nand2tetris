/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=NOTsel);
    And(a=a, b=NOTsel, out=ANDout1);
    And(a=sel, b=b, out=ANDout2);
    Xor(a=ANDout1, b=ANDout2, out=out);
}